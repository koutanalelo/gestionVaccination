<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MenuMedecinActivity">

    <!-- Titre de l'activité -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu du Médecin"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bouton pour afficher la liste des bébés -->
    <Button
        android:id="@+id/btnListeBebes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voir la liste des bébés"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Bouton pour gérer les vaccinations -->
    <Button
        android:id="@+id/btnGererVaccination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gérer les vaccinations"
        app:layout_constraintTop_toBottomOf="@+id/btnListeBebes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Bouton pour voir les rapports -->
    <Button
        android:id="@+id/btnVoirRapports"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voir les rapports"
        app:layout_constraintTop_toBottomOf="@+id/btnGererVaccination"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Bouton pour déconnecter -->
    <Button
        android:id="@+id/btnDeconnexion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Déconnexion"
        app:layout_constraintTop_toBottomOf="@+id/btnVoirRapports"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
